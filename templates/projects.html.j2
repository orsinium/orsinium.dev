{% extends "base.html.j2" %}

{% block content %}
  <div class="container">
    <h1 id="Projects">Projects</h1>
    <div class="row">
      <form class="col-2">
        {% for tag in items.tags %}
          {% if tag.count > 1 %}
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="{{ tag.id }}">
              <label class="form-check-label" for="{{ tag.id }}">
                {{ tag.name }} ({{ tag.count }})
              </label>
            </div>
          {% endif %}
        {% endfor %}
      </form>
      <div class="col">
        <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-2">
          {% for item in items %}
            {% include "card.html.j2" with context %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
