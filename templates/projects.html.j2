{% extends "base.html.j2" %}

{% block content %}
  <div class="container" x-data="{ showed_projects: 0 }">
    <h1 id="Projects">
      Projects
      <span class="text-muted">
        (<span x-text="showed_projects"></span>/{{ items.count }})
      </span>
    </h1>
    <div
      class="row"
      x-data="{
        enabled_tags: [],
        available_tags: [],
        reset() {
          this.showed_projects = 0
          this.available_tags = []
        },
        all_enabled(project_tags) {
          if (this._all_enabled(project_tags)) {
            showed_projects += 1
            this.available_tags.push(...project_tags)
            return true
          }
          return false
        },
        _all_enabled(project_tags) {
          if (this.enabled_tags.length == 0) {
            return true
          }
          if (project_tags.length == 0) {
            return false
          }
          return this.enabled_tags.every(t => project_tags.includes(t))
        }
      }"
    >
      <form class="col-sm-12 col-md-3 col-lg-2">
        {% for tag in items.tags %}
          {% if tag.count > 1 %}
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="{{ tag.id }}"
                id="{{ tag.id }}"
                x-model="enabled_tags"
                x-on:change="reset()"
                x-bind:disabled="!available_tags.includes('{{ tag.id }}')"
              />
              <label
                class="form-check-label"
                for="{{ tag.id }}"
              >
                {% if tag.icon_fa %}
                  <i class="{{ tag.icon_fa }} fa-fw"></i>
                {% endif %}
                {{ tag.name }}
                <span class="text-muted">
                  (<span x-text="available_tags.filter(t => t == '{{tag.id}}').length"></span>)
                </span>
              </label>
            </div>
          {% endif %}
        {% endfor %}
      </form>
      <div class="col">
        <div class="row row-cols-sm-1 row-cols-lg-2 row-cols-xl-3 g-2">
          {% for item in items %}
            {% include "card.html.j2" with context %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
