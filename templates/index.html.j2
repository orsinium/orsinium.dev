{% extends "base.html.j2" %}

{% block content %}
  <div class="container">
    <div class="row">
      {% for item in items['links'] %}
        {% if 'home' in item['pages'] %}
          <a class="btn col-lg-4 btn-light" href="{{ item['link'] }}" target="=_blank">
            <i class="{{ item['icon'] }}"></i>
            {{ item['name'] }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endblock %}
